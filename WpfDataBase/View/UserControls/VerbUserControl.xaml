<UserControl x:Class="WpfDataBase.View.UserControls.VerbUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDataBase.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="ID"/>
        <TextBox x:Name="Present"/>
        <TextBox x:Name="PresentE3"/>
        <TextBox x:Name="SimplePast"/>
        <ComboBox x:Name="AuxiliaryVerb"/>
        <TextBox x:Name="Perfect"/>
        <TextBox x:Name="Expression"/>
    </StackPanel>
    
</UserControl>
